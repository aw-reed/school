<body>
    <h2>How Old Are You?</h2>

    <form id="ageForm">
        <label for="birthdate">Enter Your Birth Date Below:</label>
        <input type ="date" id="birthdate" required>
        <button type="button" onclick="age()">Calculate</button>
    </form>

    <p id="result"></p>

    <script>
        function age(){
            const birthInput = document.getElementById('birthdate').value;
            const birthdate = new Date(birthInput);
            const now = new Date();

            if (birthdate > now){
                document.getElementById('result').innerHTML = "Enter A Possible Birth Date.";
            } else {
                const age = Math.floor((now - birthdate) / (365.25 * 24 * 60 * 60 * 1000));
                document.getElementById('result').innerHTML = "You are " + age + " years old!";
            }
        }
    </script>

</body>
